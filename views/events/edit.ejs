<%layout('./layouts/boilerplate')%>



<form action="/events/<%= event._id%>?_method=PUT" method="post" class="mb-3">
    <div class="mb-3" >
        <label for="title" class="form-label">Enter the Title</label>
        <input type="text" class="form-control" id="title" placeholder="Title" name="event[title]" value="<%= event.title%>">
      </div>
    
    
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input type="text" class="form-control" id="description" name="event[description]" placeholder="Description" value="<%= event.description%>">
      </div>
    
    
      <div class="mb-3">
        <label for="content" class="form-label">Content</label>
        <textarea class="form-control" name="event[content]" id="content" rows="3" placeholder="Content" ><%= event.content%></textarea>
      </div> 
    
      <button type="submit" class="btn btn-dark">Edit</button>
    </form>
