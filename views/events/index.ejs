<%layout('./layouts/boilerplate')%>
<div id="cluster-map" style="height: 300px; width: 100%;"></div>

<% for (let event of events){ %>
   
    <div class="card mb-3"  >
        <div class="row">
          <div class="col-md-4">
            <img crossorigin="anonymous" class="img-fluid" src="<%= event.image[0].url%>" alt="">
          </div>
         <div class="col-md-8">
           <div class="card-body">
             <h5 class="card-title">
               <%= event.title %>
               
             </h5>
             <p class="text-muted"><%= event.location %></p>

             <p class="card-text"><%= event.description %></p>
             
             <a href="/events/<%= event._id %>" class="btn  btn-primary">View <%= event.title %></a>
           </div>
         </div>
        </div>
       </div>

    <%}%>

  

    <script>
      const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
      const events = {features: <%- JSON.stringify(events) %>}
    </script>


<script src="/javascripts/clusterMap.js"></script>

