<% layout('layouts/boilerplate')%>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8">
          <div class="card">
            <div class="card-header">
              <h5 class="card-title">Login</h5>
            </div>
            <div class="card-body">

                <form action="/login" method="POST" class="form was-validated" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" class="form-control" type="text" id="username" name="username" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" type="text" id="password" name="password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                    </div>
                    <button class="btn btn-success">Login</button>
                </form>            </div>
          </div>
        </div>
      </div>
    </div>